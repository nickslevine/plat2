fn main() {
  print(value = "=== String Operations Test ===");

  // Simple string literal
  print(value = "1. Simple string literal:");
  let message: String = "Hello, Plat!";
  print(value = message);

  // String interpolation with variable
  print(value = "2. String interpolation with variable:");
  let name: String = "World";
  let greeting: String = "Hello, ${name}!";
  print(value = greeting);

  // String interpolation with number
  print(value = "3. String interpolation with number:");
  let x: Int32 = 42;
  let number_msg: String = "The answer is ${x}";
  print(value = number_msg);

  // Multiple interpolation
  print(value = "4. Multiple interpolation:");
  let first: String = "Alice";
  let second: String = "Bob";
  let both: String = "Names: ${first} and ${second}";
  print(value = both);

  print(value = "=== Test Complete ===");
}