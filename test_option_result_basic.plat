fn main() {
    print("=== Testing Option<T> ===");

    // Test Option with integers
    let some_int = Option::Some(42);
    let int_result = match some_int {
        Option::Some(x) -> x * 2,
        Option::None -> 0
    };
    print("Some(42) * 2 = ${int_result}");

    // Test Option with strings
    let some_str = Option::Some("Hello, Plat!");
    let str_result = match some_str {
        Option::Some(s) -> s,
        Option::None -> "Nothing here"
    };
    print("Some string: ${str_result}");

    print("=== Testing Result<T, E> ===");

    // Test Result::Ok
    let ok_result = Result::Ok(200);
    let ok_value = match ok_result {
        Result::Ok(x) -> x / 2,
        Result::Err(e) -> 0
    };
    print("Ok(200) / 2 = ${ok_value}");

    // Test Result::Err
    let err_result = Result::Err(404);
    let err_value = match err_result {
        Result::Ok(x) -> 0,
        Result::Err(e) -> e
    };
    print("Err(404) = ${err_value}");

    // Test Result with string errors
    let string_err = Result::Err("File not found");
    let err_msg = match string_err {
        Result::Ok(x) -> "Success",
        Result::Err(msg) -> msg
    };
    print("Error message: ${err_msg}");

    print("=== All tests passed! ===");
}