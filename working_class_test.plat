class Point {
  let x: Int32;
  let y: Int32;
  var name: String;

  init(x: Int32, y: Int32, name: String) {
    self.x = x;
    self.y = y;
    self.name = name;
  }
}

fn main() {
  // Constructor calls work!
  let p1: Point = Point.init(x = 10, y = 20, name = "origin");
  let p2: Point = Point.init(x = 5, y = 15, name = "point2");

  // Member access works!
  print(value = "Point 1 coordinates: (${p1.x}, ${p1.y})");
  print(value = "Point 1 name: ${p1.name}");

  print(value = "Point 2 coordinates: (${p2.x}, ${p2.y})");
  print(value = "Point 2 name: ${p2.name}");

  print(value = "Class functionality is working!");
}